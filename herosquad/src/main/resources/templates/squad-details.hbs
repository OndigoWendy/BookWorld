{{#partial "content"}}
    <h1>{{squad.name}}</h1>
    <p>Here are all the heroes listed in this squad:</p>
    <ul>
        {{#each heroes}}
            <li>
                <p><a href="/squads/{{squad.id}}/heroes/{{id}}">{{description}}</a></p>
            </li>
        {{/each}}
    </ul>
    <a href="/squads/{{squad.id}}/edit">Edit this category</a><br>
    <a href="/squads/{{squad.id}}/delete">DELETE this category</a>
{{/partial}}

{{> layout.hbs}}