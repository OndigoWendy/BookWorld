{{#partial "content"}}

    <p>Description: {{ heroes.description }}</p>
    <p>Category of this task: {{ squad.name }}</p>
    <h5>
        Task status:
        {{#if task.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}
    </h5>
    <p>
        <a href="/heroes/{{hero.id}}/edit">Edit this task</a><br>
        <a href="/squads/{{hero.squadId}}/heroes/{{hero.id}}/delete">DELETE this task</a>
    </p>

{{/partial}}

{{> layout.hbs}}