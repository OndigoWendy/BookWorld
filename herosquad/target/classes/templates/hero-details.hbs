{{#partial "content"}}

    <p>Hero: {{ hero.description }}</p>
    <p>Squad : {{ squad.name }}</p>
    <h5>
        Task status:
        {{#if hero.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Deployed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Pending
        {{/if}}
    </h5>
    <p>
        <a href="/heroes/{{hero.id}}/edit">Edit this hero.</a><br>
        <a href="/squads/{{hero.squadId}}/heroes/{{hero.id}}/delete">Destroy this hero</a>
    </p>

{{/partial}}

{{> layout.hbs}}